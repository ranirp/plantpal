<div className="toast toast-center m-0 p-0 w-full hidden" id="toast">
    <div className="alert alert-error w-full h-8 rounded-sm text-white flex place-content-center place-items-center items-center">
        <svg 
            xmlns="http://www.w3.org/2000/svg" 
            className="stroke-current shrink-0 h-6 w-6" 
            fill="none" 
            viewBox="0 0 24 24">
            <path 
                strokeLinecap="round" 
                strokeLinejoin="round" 
                strokeWidth="2" 
                d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>You are Offline, some functionalities may not work.</div>
    </div>
</div>

<script>
    if (navigator.onLine) {
        document.getElementById('toast').classList.add('hidden');
    } else {
        document.getElementById('toast').classList.remove('hidden');
    }

    window.addEventListener('online', () => {
        console.log('You are online...Connected!');
        document.getElementById('toast').classList.add('hidden');
    });
    window.addEventListener('offline', () => {
        console.log('You are offline...Disconnected!');
        document.getElementById('toast').classList.remove('hidden');
    });
</script>