<!DOCTYPE html>
<html>
    <head>
        <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
        <link rel="stylesheet" href="/css/outputStyles.css" />
        <script src="/javascripts/user/userScript.js"></script>
        <script src="/javascripts/user/userRenderScript.js"></script>
        <script src="/javascripts/addPlant/addPlantUtility.js"></script>
        <script src="/javascripts/chat/chatIDBScript.js"></script>
        <script src="/javascripts/chat/chatScript.js"></script>
        <script src="/javascripts/chat/chatRenderScript.js"></script>
        <script>
            var plantId = '<%= data._id %>';
            var loggedInUser = '<%= username %>';
        </script>
    </head>

    <script src="/tw-elements/dist/js/tw-elements.umd.min.js" type="text/javascript"></script>

    <body onload="init()">

        <div class="flex flex-col h-full card w-full glass">
            <div class="p-4 border-b-2 flex flex-col gap-2">
                <div class="flex flex-row justify-between items-center">
                    <span>Chat on: <%= data.plantName %></span>
                    <div class="flex flex-row items-center">
                        <div class="rounded-full w-4 h-4 shadow-xl" id="onlineColor"></div>
                        <div id="onlineText" class="pl-2"></div>
                    </div>
                </div>
                <div id="offlineInfo" class="text-sm text-gray-600 hidden">
                    <i class="fas fa-info-circle mr-1"></i>
                    <span id="offlineInfoText">Offline mode: Limited to your own plants</span>
                </div>
            </div>
            <div class="flex flex-col lg:h-full h-[300px] mx-2 overflow-scroll py-9" id="chatMessages"></div>
            <%- include('./chatInputComponent.ejs') %>
        </div>
    </body>
</html>