<%#
/**
 * @component PlantItemComponent
 * @description A compact card component displaying a plant item with minimal information
 * 
 * Features:
 * - Small compact design
 * - Plant image
 * - Plant name
 * - Date/time only
 * 
 * Required Data:
 * @param {Object} plant - Plant data object
 * @param {string} plant._id - Unique identifier
 * @param {string} plant.photo - Photo filename
 * @param {string} plant.plantName - Name of the plant
 * @param {Date} plant.dateAdded - Creation date
 */
%>

<div class="bg-gray-100 border border-gray-600 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 cursor-pointer overflow-hidden"
    onclick="showDetailsPage('<%= plant._id %>')">
    <%# Plant image %>
    <div class="w-full h-32 overflow-hidden">
        <img 
            src="/images/uploads/<%= plant.photo %>" 
            alt="<%= plant.plantName %>" 
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
            onerror="this.onerror=null;this.src='/images/placeholder.jpg';" />
    </div>
    
    <!-- Plant details -->
    <div class="p-3">
        <h3 class="font-semibold text-gray-400 text-sm mb-1 truncate"><%= plant.plantName %></h3>
        <p class="text-xs text-gray-500">
            Date/Time: <%= new Date(plant.dateAdded).toLocaleDateString() %> <%= new Date(plant.dateAdded).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
        </p>
    </div>
</div>