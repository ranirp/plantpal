<!-- Card element with background styling -->
<div class="card shadow-lg bg-white hover:shadow-xl transition-shadow cursor-pointer"
    onclick="showDetailsPage('<%= plant._id %>')">
    <!-- Image element displaying plant's image -->
    <figure class="px-4 pt-4">
        <img 
            src="/images/uploads/<%= plant.photo %>" 
            alt="<%= plant.plantName %>" 
            class="w-full h-48 object-cover rounded-lg"
            onerror="this.onerror=null;this.src='/images/placeholder.jpg';" />
    </figure>
    
    <!-- Container for plant details -->
    <div class="card-body p-4">
        <h3 class="card-title text-lg font-bold"><%= plant.plantName %></h3>

        <div class="flex items-center gap-2 mt-2">
            <div class="badge badge-primary capitalize"><%= plant.type %></div>
        </div>

        <div class="mt-2">
            <p class="text-sm text-gray-600">
                <i class="fas fa-user mr-1"></i>
                <%= plant.nickname %>
            </p>
            <p class="text-sm text-gray-600">
                <i class="fas fa-calendar mr-1"></i>
                <%= new Date(plant.dateAdded).toLocaleDateString() %>
            </p>
        </div>

        <p class="text-sm text-gray-700 mt-2 line-clamp-2">
            <%= plant.description %>
        </p>
    </div>
</div>