<%#
/**
 * @template ErrorPage
 * @description Generic error page
 *
 * Features:
 * - Displays error status and message
 * - Provides navigation options
 *
 * Required Data:
 * @param {Object} error - Error object
 * @param {string} error.status - HTTP status code
 * @param {string} error.message - Error message
 */
%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Error' %></title>
    <link rel="stylesheet" href="/css/outputStyles.css" />
</head>
<body class="bg-base-200 min-h-screen flex items-center justify-center">
    <div class="card w-96 bg-base-100 shadow-xl">
        <div class="card-body text-center">
            <% if (typeof error !== 'undefined' && error && error.status) { %>
                <h2 class="card-title text-error text-6xl font-bold justify-center mb-4">
                    <%= error.status %>
                </h2>
            <% } %>
            
            <h3 class="text-2xl font-semibold mb-2">
                <%= title || 'Error' %>
            </h3>
            
            <p class="text-base-content opacity-70 mb-6">
                <%= message || 'An error occurred. Please try again later.' %>
            </p>
            
            <div class="card-actions justify-center gap-4">
                <button onclick="history.back()" class="btn btn-outline">
                    Go Back
                </button>
                <a href="/" class="btn btn-primary">
                    Go Home
                </a>
            </div>
        </div>
    </div>
</body>
</html>
