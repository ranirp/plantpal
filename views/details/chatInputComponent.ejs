<link
    rel="stylesheet" 
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>

<form
    id="chatForm"
    action="" 
    class="border-t-2 p-3 flex flex-col sm:flex-row w-full items-center justify-center gap-2"
>
    <input
        type="text" 
        name="text" 
        placeholder="Type your message here..." 
        class="input input-bordered w-full h-11 p-2 px-4 rounded-sm"
        id="chatInput"
        maxlength="500"
        required
    />

    <button
        class="btn btn-neutral rounded flex flex-row items-center justify-center text-white w-full  sm:w-auto"
        type="submit"
    >
        Send
        <i class="fas fa-paper-plane ml-2"></i>
    </button>
</form>